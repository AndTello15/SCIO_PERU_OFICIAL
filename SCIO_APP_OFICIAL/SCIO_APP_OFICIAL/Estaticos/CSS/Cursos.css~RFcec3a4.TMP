.Tabla_Usuario {
    position:absolute;
    top:15%;
    left:0%;
    background-color: #0B3C5D;
    width: 99.7%;
    height: 110%;
    display: grid;
    grid-gap: 0px;
    grid-template-columns: 17% 83%;
    grid-template-rows: 30% 30% 37% 37%;
    border: solid 2px #0B3C5D;
}
.PosImagen{
    background-color:white;
    grid-column: 1/2;
    grid-row:1/2;
    border: solid 2px #0B3C5D;
}
.PosDescripcion {
    background-color: white;
    grid-column: 1/2;
    grid-row: 2/3;
    border: solid 2px #0B3C5D;
}
.PosDatos {
    background-color: white;
    grid-column: 2/3;
    grid-row: 1/3;
    border: solid 2px #0B3C5D;
}
.PosCursos {
    background-color: white;
    grid-column: 1/4;
    grid-row: 3/4;
    border: solid 2px #0B3C5D;
}
.PosTerminosyCondiciones {
    background-color: white;
    grid-column: 1/4;
    grid-row: 4/5;
    border: solid 2px #0B3C5D;
}
